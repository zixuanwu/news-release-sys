<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>LoadFilter</filter-name>
        <filter-class>Filter.LoadFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoadFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

    <!--用户登陆验证-->
    <servlet>
        <servlet-name>LoadFilterServlet</servlet-name>
        <servlet-class>Servlet.LoadFilterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadFilterServlet</servlet-name>
        <url-pattern>/LoadFilterServlet</url-pattern>
    </servlet-mapping>
    <!--用户注册验证-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!--修改用户信息-->
    <servlet>
        <servlet-name>UserEdidtServlet</servlet-name>
        <servlet-class>Servlet.UserEdidtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserEdidtServlet</servlet-name>
        <url-pattern>/UserEdidtServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserDeleteServlet</servlet-name>
        <servlet-class>Servlet.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDeleteServlet</servlet-name>
        <url-pattern>/UserDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewsUploadServlet</servlet-name>
        <servlet-class>Servlet.NewsUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsUploadServlet</servlet-name>
        <url-pattern>/NewsUploadServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoadBackServlet</servlet-name>
        <servlet-class>Servlet.LoadBackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadBackServlet</servlet-name>
        <url-pattern>/LoadBackServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoadFileServlet</servlet-name>
        <servlet-class>Servlet.LoadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadFileServlet</servlet-name>
        <url-pattern>/LoadFileServlet</url-pattern>
    </servlet-mapping>
</web-app>